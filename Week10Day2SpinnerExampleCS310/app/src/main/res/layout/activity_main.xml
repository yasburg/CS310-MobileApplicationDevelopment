<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" android:padding="20dp">


    <Spinner
        android:id="@+id/spcities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/cities" />

    <Button
        android:id="@+id/btncity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get City" />


    <TextView android:id="@+id/txtcity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spcities2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="10dp"/>

    <TextView android:id="@+id/txtcity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="40dp"/>


    <Spinner android:id="@+id/spdepartments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>


</LinearLayout>